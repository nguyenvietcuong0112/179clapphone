<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
            <size android:width="48dp" android:height="24dp" />
            <corners android:radius="20dp" />
            <solid android:color="#98A2B3" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
            <size android:width="48dp" android:height="24dp" />
            <corners android:radius="20dp" />
            <solid android:color="#5136C9" />
            <stroke android:width="1dp" android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>