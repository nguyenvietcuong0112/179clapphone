<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.getstart.GetStartActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--            <ImageView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_centerInParent="true"-->
                <!--                android:layout_marginStart="25dp"-->
                <!--                android:layout_marginTop="25dp"-->
                <!--                android:layout_marginEnd="25dp"-->
                <!--                android:layout_marginBottom="25dp"-->
                <!--                android:src="@drawable/bg2logo" />-->
                <FrameLayout
                    android:id="@+id/fr_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_ads_native"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="@dimen/_5sdp">

                    <RelativeLayout
                        android:id="@+id/shimmer_native_language"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <include layout="@layout/ads_shimmer_native_get_two" />
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/nativeLay"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="0dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/b1" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/b2" />

                <ImageView
                    android:id="@+id/privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"

                    android:layout_marginTop="10dp"

                    android:adjustViewBounds="true"
                    android:src="@drawable/b3" />

                <ImageView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="10dp"


                    android:adjustViewBounds="true"
                    android:src="@drawable/b4" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>